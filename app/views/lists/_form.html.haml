= form_for @list||=List.new do |f|
  -if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |msg|
          %li= msg
  %p
    =f.label :name
    =f.text_field :name
  %p
    =f.label "Description"
    =f.text_area :desc

  .actions
    = f.submit 'Save'
