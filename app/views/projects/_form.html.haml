%h3 #{action_name.capitalize} project

= form_for @project||=Project.new, :remote => true do |f|
  -if @project.errors.any?
    %h4.alert_error
      - @project.errors.full_messages.each do |msg|
        %li= msg
  %fieldset
    %p
      =f.label :name
      =f.text_field :name

  .actions
    = f.submit 'Save'

